{
  "function": {
    "prefix": "f",
    "body": [
      "function ${1:name}",
      "\t${0}",
      "end"
    ],
    "description": "Function definition"
  },
  "if statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition}",
      "\t${0}",
      "end"
    ],
    "description": "If statement"
  },
  "variable": {
    "prefix": "l",
    "body": "set ${1:name} ${0:value}",
    "description": "Variable (local to function)"
  },
  "global constant": {
    "prefix": "c",
    "body": "set -g ${1:NAME} ${0:value}",
    "description": "Global variable (constant by convention)"
  },
  "for loop": {
    "prefix": "forr",
    "body": [
      "for ${1:item} in ${2:$list}",
      "\t${0}",
      "end"
    ],
    "description": "For loop over list"
  },
  "for i loop": {
    "prefix": "fori",
    "body": [
      "for ${1:i} in (seq 1 ${2:$len})",
      "\t${0}",
      "end"
    ],
    "description": "For loop with integer sequence"
  }
}
